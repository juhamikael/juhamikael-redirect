---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import bmcImage from "../assets/bmc-button.svg";
import "../styles/globals.css";
import { Image } from "astro:assets";
---

<Layout>
  <main class="centered">
    <section class="center-items">
      <h1 class="text-white">Welcome to Juhamikael.info</h1>
      <ul role="list" class="link-card-grid">
        <Card
          href="https://dev.juhamikael.info"
          title="dev.juhamikael.info"
          body="You can find all my coding projects and coding related stuff here"
        />
        <Card
          href="https://music.juhamikael.info"
          title="music.juhamikael.info"
          body="You can find all related to my music here"
        />
      </ul>
      <a
        href="https://www.buymeacoffee.com/juhamikael"
        target="_blank"
        class="cursor-pointer scale-card"
      >
        <Image src={bmcImage} alt="Buy me a coffee" width={120} height={100} />
      </a>
    </section>
  </main>
</Layout>
